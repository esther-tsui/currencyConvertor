var pesos: Double = 5
var reais: Double = 10
var soles: Double = 15
var total: Double //no value assigned because we don't know the currency rate, yet, therefore, the total sum will be calculated on line 8.
// 1 Peso equals 0.00029 USD
// 1 Real equals 0.24 USD
// 1 Sol equals 0.29 USD
total = (pesos * 0.00029) + (reais * 0.24) + (soles * 0.29)
print("Total USD = $\(total)")
